<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/img_actionbar_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/v3_back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="流水详情"
            android:textSize="18sp"
            android:textColor="@color/black"
            />



    </RelativeLayout>


    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/st_tablayout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/color_white"
        tl:tl_divider_color="#1A000000"
        tl:tl_divider_padding="10dp"
        tl:tl_textsize="14sp"
        tl:tl_indicator_color="@color/white"
        tl:tl_indicator_height="1dp"
        tl:tl_tab_padding="15dp"
        tl:tl_textSelectColor="#46B3FC"
        tl:tl_textUnselectColor="@color/color_black"
        tl:tl_underline_color="#1A000000"
        tl:tl_underline_height="1dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
