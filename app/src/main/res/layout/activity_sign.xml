<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".widget.sign.SignActivity" >
    <include layout="@layout/v3_activity_head"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.ying.administrator.masterappdemo.widget.CustomWebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:id="@+id/fl_signature_pad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="center"
                    android:background="#E8E8E8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#B9B9B9"
                    android:textSize="36sp"
                    android:text="此处签名"/>
                <com.ying.administrator.masterappdemo.widget.sign.SignatureView
                    android:id="@+id/signature_pad"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
            </FrameLayout>

            <Button
                android:id="@+id/btn_recharge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:text="缴纳诚意金￥100"
                android:textColor="@color/white"
                android:background="@drawable/v3_btn_shape"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clear_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_margin="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:enabled="false"
                    android:background="@drawable/btn_red_selector"
                    android:textColor="@drawable/sign_text_selector"
                    android:text="清除" />

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_margin="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:enabled="false"
                    android:background="@drawable/btn_blue_selector"
                    android:textColor="@drawable/sign_text_selector"
                    android:text="提交签名" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>