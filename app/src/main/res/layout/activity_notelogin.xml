<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.ying.administrator.masterappdemo.widget.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/app" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rl_login"
            >

            <ImageView
                android:id="@+id/img_login_username"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:src="@mipmap/phone"
                />

            <EditText
                android:layout_toRightOf="@+id/img_login_username"
                android:id="@+id/et_login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:background="@null"
                android:hint="请输入手机号"
                android:textSize="17sp"
                android:maxLength="11"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_custom_06"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/my_cursor"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rl_login"
            >

            <ImageView
                android:id="@+id/img_login_password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:src="@mipmap/password" />

            <EditText
                android:layout_toRightOf="@+id/img_login_password"
                android:id="@+id/et_login_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入验证码"
                android:textSize="17sp"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_custom_06"
                android:textCursorDrawable="@drawable/my_cursor"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tv_yzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                />
        </RelativeLayout>

    </LinearLayout>
    <TextView

        android:layout_marginTop="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="验证码登陆"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/bg_register"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码登陆"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_custom_01"
            android:textSize="15sp"
            />
    </RelativeLayout>
</LinearLayout>
