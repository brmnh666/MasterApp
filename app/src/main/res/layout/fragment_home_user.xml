<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:targetApi="lollipop"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:id="@+id/cv_home_user"
    android:layout_marginTop="40dp"
    android:clickable="false"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_home_head"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/icon_user_head"/>

<ImageView
    android:id="@+id/img_home_withdraw"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:src="@mipmap/icon_home_withdraw"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp"
    android:layout_marginRight="5dp"
    />
        <TextView
            android:id="@+id/tv_home_available_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="可提现余额: "
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_home_withdraw"
            android:layout_marginTop="23dp"
            />

        <ImageView
            android:id="@+id/img_home_unfinished"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/icon_home_unfinished"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/img_home_withdraw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_home_outstanding_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="未完结金额: "
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_home_available_balance"
            android:layout_toRightOf="@+id/img_home_unfinished"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:id="@+id/img_home_free_gold"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/icon_home_free_gold"
            android:layout_below="@+id/img_home_unfinished"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tv_home_giving_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_home_outstanding_amount"
            android:layout_toRightOf="@+id/img_home_free_gold"
            android:layout_marginTop="5dp"
            android:text="赠 送 金 额: 0.00 元"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未实名认证"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_custom_01"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"
            />
      <ImageView
            android:id="@+id/img_certification"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/icon_name_authentication"
            android:layout_toLeftOf="@+id/tv_certification"
             android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            />

        <ImageView
            android:id="@+id/img_un_certification"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/icon_home_un_certification"
            android:layout_toLeftOf="@+id/tv_certification"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/img_home_location"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@mipmap/icon_home_location"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/tv_home_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:singleLine="true"
             android:text="宁波市.江北区"
            android:padding="@dimen/dp_10"
            android:layout_toRightOf="@+id/img_home_location"
            android:layout_toLeftOf="@+id/img_certification"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            />



    </RelativeLayout>
</android.support.v7.widget.CardView>
