<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_apply_beyond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="申请远程费"
                android:textStyle="bold"
                android:textColor="#6A6A6A"
                android:textSize="16sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="14dp"
            android:background="@color/color_custom_08" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_Out_of_service_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                android:visibility="visible">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="34dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/icon_loaction" />

                    <TextView
                        android:id="@+id/tv_remote_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12Km"
                        android:textColor="#FF1E00"
                        android:textSize="14sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:text="已超出服务范围"
                    android:textColor="#ABABAB"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_Out_of_service_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:visibility="visible"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ed_order_detail"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_map1"
                        android:layout_width="34dp"
                        android:layout_height="29dp"
                        android:src="@mipmap/add_picture" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_map2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/add_picture"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right">

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="输入超出公里数: "-->
                    <!--android:textColor="#6A6A6A"-->
                    <!--android:textSize="14sp" />-->

                    <EditText
                        android:id="@+id/et_order_beyond_km"
                        android:layout_width="87dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="17dp"
                        android:background="@drawable/ed_order_detail"
                        android:hint="请输入公里数"
                        android:textColorHint="#6A6A6A"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:maxLength="5"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_black"
                        android:textSize="12sp"
                        android:layout_marginLeft="9dp"/>
                </LinearLayout>



            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tv_order_detail_btn"
                android:padding="10dp"
                android:text="取消"
                android:textStyle="bold"
                android:textColor="#6A6A6A"
                android:textSize="14sp" />
            <Button
                android:id="@+id/btn_submit_beyond"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tv_order_detail_btn"
                android:padding="10dp"
                android:text="提交远程费申请"
                android:textStyle="bold"
                android:textColor="#6A6A6A"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>