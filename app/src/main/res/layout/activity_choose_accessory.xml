<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_custom_02"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_choose_accessory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_round_shape"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="17dp"
        android:paddingBottom="17dp">

        <TextView
            android:id="@+id/tv_accessory_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请选择配件"
            android:textColor="#333333"
            android:textColorHint="#898989"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_marginRight="11dp"
            android:src="@mipmap/right_arrow" />
    </LinearLayout>

    <com.ying.administrator.masterappdemo.widget.ClearEditText
        android:id="@+id/et_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_round_shape"
        android:hint="请输入数量"
        android:text="1"
        android:inputType="number"
        android:maxLength="5"
        android:textColor="#333333"
        android:textColorHint="#898989"
        android:textSize="15sp" />
    <com.ying.administrator.masterappdemo.widget.ClearEditText
        android:id="@+id/et_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_round_shape"
        android:hint="请输入配件价格"
        android:textColor="#333333"
        android:textColorHint="#898989"
        android:textSize="15sp" />
    <com.ying.administrator.masterappdemo.widget.ClearEditText
        android:id="@+id/et__service_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:background="@drawable/white_round_shape"
        android:hint="请输入服务价格"
        android:textColor="#333333"
        android:textColorHint="#898989"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/blue_shape"
            android:gravity="center"
            android:text="添加"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>

