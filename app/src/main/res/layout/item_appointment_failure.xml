    <ImageView
        android:id="@+id/img_pending_appointment_failure_phone"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:src="@mipmap/icon_recover"
        android:layout_marginTop="64dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"/>

<TextView
    android:id="@+id/tv_appointment_failure_reason"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="原因: 用户电话无法接通"
    android:textSize="12sp"
    android:layout_marginTop="16dp"
    android:layout_below="@+id/tv_address_appointment_failure"
      android:layout_marginLeft="14dp"
    android:layout_marginBottom="12dp"
    />




