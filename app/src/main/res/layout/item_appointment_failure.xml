    <ImageView
        android:id="@+id/img_pending_appointment_failure_phone"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:src="@mipmap/icon_telphone"
        android:layout_marginTop="64dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再次预约"
        android:textSize="14sp"
        android:layout_below="@+id/img_pending_appointment_failure_phone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>

<TextView
    android:id="@+id/tv_appointment_failure_reason"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="原因: 用户电话无法接通"
    android:textSize="12sp"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/tv_address_appointment_failure"
      android:layout_marginLeft="14dp"
    android:layout_marginBottom="12dp"
    />
    <View
        android:id="@+id/view_point"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_appointment_failure_reason"
        android:layout_marginTop="5dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_point"
        android:gravity="center"

        android:orientation="horizontal"

        >


        <TextView
            android:id="@+id/tv_pending_appointment_failure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/tv_recevied"
            android:padding="8dp"
            android:text="预约失败"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/tv_pending_appointment_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/tv_recevied"
            android:padding="8dp"
            android:text="预约成功"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/tv_recevied"
            android:padding="8dp"
            android:text="取消工单"
            android:textSize="16sp"

            />

    </LinearLayout>




</RelativeLayout>
