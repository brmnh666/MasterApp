<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:orientation="vertical">

    <include layout="@layout/actionbar_receiving_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/white_shape"
        android:orientation="vertical"
        android:padding="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工单状态："
                android:textColor="#6A6A6A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_work_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待完成工单"
                android:textColor="#FF7979"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款方式："
                android:textColor="#6A6A6A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平台代付"
                android:textColor="#6A6A6A"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单时间："
                android:textColor="#6A6A6A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-12-16  13:53:08"
                android:textColor="#6A6A6A"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工单编号："
                android:textColor="#6A6A6A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_work_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="132165465464"
                android:textColor="#6A6A6A"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reason_pending_appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="热水器不通电"
                android:textColor="#6A6A6A"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量:"
                android:textColor="#6A6A6A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#FF6868"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="台"
                android:textColor="#6A6A6A"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#FF0000"
                android:gravity="center"
                android:text="维修"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_service_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="即热式热水器/储水式热水器"
                android:textColor="#A4A4A4"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#DCDCDC" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="33dp"
                android:src="@drawable/address" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="刘波"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="86-13963560259"
                        android:textColor="#898989"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:text="山东/聊城市/东昌府区/水城雅居一号楼一单元5楼东户"
                    android:textColor="#333333"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务地址："
                android:textColor="#6A6A6A"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_service_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宁波市江北区长阳路人才公寓5栋1702室"
                android:textColor="#6A6A6A"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_return_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_shape"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:text="添加返件信息"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/gray_shape"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp">

            <EditText
                android:id="@+id/et_single_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="快递单号:"
                android:textColor="#ABABAB"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#B5B5B5" />

            <EditText
                android:id="@+id/et_express_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@null"
                android:hint="快递公司名称"
                android:textColor="#ABABAB"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="#B5B5B5" />

            <LinearLayout
                android:id="@+id/ll_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/icon_scan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="扫描条码"
                    android:textColor="#6A6A6A"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_view_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看示例"
                android:textSize="12sp"
                android:textColor="#8B8B8B"
                android:layout_gravity="center"/>
            
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/question"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="21dp"
            android:paddingBottom="15dp">
            <LinearLayout
                android:id="@+id/ll_bar_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_bar_code"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:src="@mipmap/upload" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条形码"
                    android:textColor="#353535"
                    android:textSize="10dp"
                    android:layout_marginTop="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_machine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_machine"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:src="@mipmap/upload" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="整机"
                    android:textColor="#353535"
                    android:textSize="10dp"
                    android:layout_marginTop="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_fault_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_fault_location"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:src="@mipmap/upload" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障位置"
                    android:textColor="#353535"
                    android:textSize="10dp"
                    android:layout_marginTop="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_new_and_old_accessories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_new_and_old_accessories"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:src="@mipmap/upload" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新旧配件"
                    android:textColor="#353535"
                    android:textSize="10dp"
                    android:layout_marginTop="13dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_service_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_shape"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:paddingBottom="17dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="添加服务过程图片"
                android:textSize="16sp"
                android:textColor="#505050"/>

            <LinearLayout
                android:id="@+id/ll_view_example_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看示例"
                    android:textSize="12sp"
                    android:textColor="#8B8B8B"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/question"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="21dp">
            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@mipmap/upload"/>
            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@mipmap/upload"/>
            <ImageView
                android:id="@+id/iv_three"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@mipmap/upload"/>
            <ImageView
                android:id="@+id/iv_four"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@mipmap/upload"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    
    <Button
        android:id="@+id/btn_complete_submit"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_blue"
        android:text="提   交"
        android:textColor="@color/white"
        android:textSize="15sp"/>
</LinearLayout>