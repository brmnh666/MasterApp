<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F2F5"
    android:orientation="vertical">

    <include layout="@layout/actionbar_receiving_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/color_custom_01" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/white_half_shape"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="头像"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <ImageView

                            android:id="@+id/iv_avatar"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:src="@mipmap/icon_head" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="13dp"
                            android:src="@mipmap/right_arrow" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginRight="14dp"
                        android:background="#E4E4E4" />

                    <LinearLayout
                        android:id="@+id/ll_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="17dp"
                        android:paddingBottom="21dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="店铺名称"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:src="@mipmap/right_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="#f5f2f5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="17dp"
                        android:paddingBottom="11dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="姓名"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_un_certification"
                            android:layout_width="42dp"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="24dp"
                            android:background="@drawable/pink_shape"
                            android:gravity="center"
                            android:text="未认证"
                            android:visibility="gone"
                            android:textColor="@color/color_custom_06"
                            android:textSize="@dimen/dp_10" />

                        <TextView
                            android:id="@+id/tv_certification"
                            android:layout_width="42dp"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="24dp"
                            android:background="@drawable/pink_shape"
                            android:gravity="center"
                            android:text="已认证"
                            android:textColor="#FF5346"
                            android:visibility="gone"
                            android:textSize="@dimen/dp_10" />

                    </LinearLayout>

               <!--     <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginRight="14dp"
                        android:background="#E4E4E4" />-->

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="手机号"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:background="#E4E4E4" />

                    <LinearLayout
                        android:id="@+id/ll_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="17dp"
                        android:paddingBottom="19dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="账户与安全"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:src="@mipmap/right_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="#f5f2f5"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="17dp"
                        android:paddingBottom="11dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="身份证"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_id_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#858585"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:background="#E4E4E4" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="身份证照片"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/iv_id_card_one"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            />

                        <ImageView
                            android:id="@+id/iv_id_card_two"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_select_service_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:orientation="horizontal"
                        android:paddingTop="17dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:id="@+id/tv_codestr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:layout_weight="1"
                            android:text="修改服务区域"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="点击修改"
                            android:textColor="#aaaaaa"
                            android:layout_marginRight="5dp"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="14dp"
                            android:src="@mipmap/right_arrow" />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_weight="1"
                            android:text="选择服务起点"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_under_warranty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10">

                            <CheckBox
                                android:id="@+id/cb_under_warranty"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/check_selector"
                                android:button="@null"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="店铺地址"
                                android:textColor="#858585"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_outside_the_warranty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10">

                            <CheckBox
                                android:id="@+id/cb_outside_the_warranty"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/check_selector"
                                android:button="@null"
                                android:clickable="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="政府中心"
                                android:textColor="#858585"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="#f5f2f5" />

                    <LinearLayout
                        android:id="@+id/ll_shop_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="17dp"
                        android:paddingBottom="14dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="店铺地址"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_shop_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textColor="#858585"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:background="#E4E4E4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="17dp"
                        android:paddingBottom="14dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="性别"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_male"
                            android:layout_width="54dp"
                            android:layout_height="25dp"
                            android:background="@drawable/gray_radius_shape"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_male_unselect"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:visibility="visible"
                                android:src="@mipmap/male" />
                            <ImageView
                                android:id="@+id/img_male_select"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/male2"
                                android:visibility="gone"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:text="男"
                                android:textColor="#BBBBBB"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_female"
                            android:layout_width="54dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="9dp"
                            android:background="@drawable/gray_radius_shape"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_female_select"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:src="@mipmap/female" />
                            <ImageView
                                android:id="@+id/img_female_unselect"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:visibility="visible"
                                android:src="@mipmap/female2" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:text="女"
                                android:textColor="#BBBBBB"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:background="#E4E4E4" />

                    <LinearLayout
                        android:id="@+id/ll_my_skills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="17dp"
                        android:paddingBottom="14dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="我的技能"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_my_skills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="修改生活技能"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:src="@mipmap/right_arrow" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:background="#E4E4E4" />
                    <LinearLayout
                        android:id="@+id/ll_recipient_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="收件地址"
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_recipient_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#858585"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:src="@mipmap/right_arrow" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>