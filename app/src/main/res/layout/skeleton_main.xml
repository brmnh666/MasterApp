                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tab_me_selector"
                    android:gravity="center" />
                   </FrameLayout>

                <TextView
                    android:id="@+id/tv_my"
