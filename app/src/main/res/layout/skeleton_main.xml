<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#1690FF"
        android:id="@+id/actionbar_layout"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/img_home_qr_code"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_qr_code"
                android:padding="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_home_qr_code"
                android:text="分享商城"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"/>

        </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="首页"
            android:textSize="20sp"
            android:textColor="@color/color_white"
            android:layout_marginTop="10dp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">
            <ImageView
                android:id="@+id/img_home_customer_service"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_customer_services"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系客服"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_home_user"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        tools:targetApi="lollipop">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:id="@+id/img_good"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_skeleton_circle2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginLeft="30dp"
            />

        <View
            android:id="@+id/tv_name"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintTop_toTopOf="@+id/img_good"
            app:layout_constraintLeft_toRightOf="@+id/img_good"
            android:layout_marginLeft="20dp"

            />

        <View
            android:id="@+id/tv_property"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintLeft_toRightOf="@+id/img_good"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <View
            android:id="@+id/tv_property2"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintLeft_toRightOf="@+id/img_good"
            app:layout_constraintTop_toBottomOf="@+id/tv_property"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

