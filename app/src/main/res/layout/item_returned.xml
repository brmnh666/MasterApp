<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="19dp">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:src="@mipmap/biao"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_accessory_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="定时器按钮"
                android:textColor="#6A6A6A"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/photo1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/dp_10"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/photo2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/dp_10"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:id="@+id/ll_state_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/sure"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="已寄件"
                    android:textColor="#979797"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:background="@drawable/gray_return_shape"
            android:orientation="vertical"
            android:paddingLeft="23dp"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="13dp"
            android:paddingRight="46dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/yunshu"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运输中"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="【已揽收】包裹正在揽收....."
                android:textSize="12sp"
                android:textColor="#818181"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="19dp">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:src="@mipmap/biao"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_accessory_name_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="电脑板"
                android:textColor="#6A6A6A"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/iv_photo1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/dp_10"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/iv_photo2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/dp_10"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:id="@+id/ll_state_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/wait"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="待返件"
                    android:textColor="#979797"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/gray_background_shape"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="5dp"
                    android:text="拒绝"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/gray_background_shape"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="5dp"
                    android:text="拒绝"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="5dp"
                    android:text="通过"
                    android:textColor="@color/red"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="14dp"/>
    </LinearLayout>
</LinearLayout>