    <View
        android:id="@+id/view_point"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_hint_returnedparts"
        android:layout_marginTop="10dp"
        android:background="#eeeeee"></View>
    <!--  <TextView
          android:id="@+id/tv_pending_appointment_success"
          android:layout_below="@+id/view_point"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="预约成功"
          android:layout_alignParentRight="true"
          android:layout_marginRight="79dp"
          android:layout_marginBottom="11dp"
          android:background="@drawable/tv_recevied"
          android:layout_marginTop="10dp"
          android:padding="5dp"
          android:textSize="16sp"
               />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/view_point"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_returnedparts_apply_parts"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/tv_recevied"
            android:padding="10dp"
            android:text="申请配件"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_telephone_reminder"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/tv_recevied"
            android:padding="10dp"
            android:text="电话催件"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_reminder"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/tv_recevied"
            android:padding="10dp"
            android:text="催     件"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_continue_service"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/tv_recevied"
            android:padding="10dp"
            android:text="完成工单"
            android:visibility="gone"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_see_detail"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/tv_recevied"
            android:padding="10dp"
            android:text="查看详情"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>


</RelativeLayout>
