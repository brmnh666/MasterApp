<?xml version="1.0" encoding="utf-8"?><!--返件单item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/rr_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_returnedparts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:text="返件单"
        android:textSize="12sp"
        android:visibility="gone"/>




    <TextView
        android:id="@+id/tv_returnedparts_status_repair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/tv_returnedparts"
        android:background="@color/color_custom_04"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="维修"
        android:textColor="@color/color_white"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/tv_orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/tv_returnedparts_status_repair"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="维修"
        android:textColor="@color/blue"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_review2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="456"
        android:textSize="12sp"
        android:textColor="@color/red"
        android:background="@drawable/gray_white_shape"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>
    <TextView
        android:id="@+id/tv_review2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_review3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:text="123"
        android:textSize="12sp"
        android:textColor="@color/red"
        android:layout_marginRight="5dp"
        android:background="@drawable/gray_white_shape"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>
    <TextView
        android:id="@+id/tv_review3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:text="123"
        android:textSize="12sp"
        android:textColor="@color/red"
        android:layout_marginRight="19dp"
        android:background="@drawable/gray_white_shape"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>
    <TextView
        android:id="@+id/tv_returnedparts_job_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="19dp"
        android:text="工单号:1212412412412414124"
        android:textSize="12sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_reason_returnedparts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="41dp"
        android:text="热水器不通电"
        android:textColor="#333333"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_malfunction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/tv_reason_returnedparts"
        android:layout_marginTop="5dp"
        android:text="不通电热水器不通电热水器不通电热水器不通电"
        android:textColor="#333333"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"/>
    <ImageView
        android:id="@+id/img_loaction"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_below="@+id/tv_malfunction"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/icon_loaction"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_loaction_returnedparts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_malfunction"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_loaction"
        android:text="距离 43.12KM"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_malfunction"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="数量:2台"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_address_returnedparts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="宁波市江北区长阳路人才公寓5栋1701室"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_hint_returnedparts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_address_returnedparts"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="11dp"
        android:text="提示:服务过程中需要申请配件请点击申请配件"
        android:textColor="#FF4444"
        android:textSize="11sp"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/ll_pending_appointment_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_address_returnedparts"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示:"
            android:textSize="12sp"
            android:textColor="#FF4444"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请在"
            android:textSize="12sp" />

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/countdownview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:isHideTimeBackground="true"
            app:isShowDay="true"
            app:isShowHour="false"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isShowTimeBgDivisionLine="false"
            app:isTimeTextBold="true"
            app:suffix="："
            app:suffixDay="天"
            app:suffixGravity="center"
            app:suffixMinute="分"
            app:suffixSecond="秒"
            app:suffixTextColor="#FF5656"
            app:suffixTextSize="11sp"
            app:timeBgColor="#ffffff"
            app:timeBgRadius="3dp"
            app:timeTextColor="#FF5656"
            app:timeTextSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="之内完成返件，否则工单将自动作废"
            android:textSize="12sp" />
    </LinearLayout>
