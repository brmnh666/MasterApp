<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <include layout="@layout/v3_activity_head"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/white_half_shape"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="30dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:elevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择服务区域"
                android:textColor="#5A5A5B"
                android:textSize="16sp"
                android:layout_marginTop="19dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:id="@+id/ll_province"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_radius_shape"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="浙江"
                        android:gravity="center"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#5A5A5B"/>
                    
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="7dp"
                        android:src="@mipmap/sanjiaoxia"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_city"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@drawable/gray_radius_shape"
                    android:gravity="center"
                    android:layout_marginLeft="9dp">

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宁波"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:textColor="#5A5A5B"/>

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="7dp"
                        android:src="@mipmap/sanjiaoxia"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:id="@+id/ll_area"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_radius_shape"
                    android:gravity="center"
                    android:layout_marginLeft="9dp">


                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="江北区"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:textColor="#5A5A5B"/>

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="7dp"
                        android:src="@mipmap/sanjiaoxia"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:id="@+id/ll_town"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_radius_shape"
                    android:gravity="center"
                    android:layout_marginLeft="9dp">

                    <TextView
                        android:id="@+id/tv_district"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="洪塘镇"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:textColor="#5A5A5B"/>

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="7dp"
                        android:src="@mipmap/sanjiaoxia"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>
            </LinearLayout>
            
            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="36dp"
                android:layout_height="35dp"
                android:src="@mipmap/tianjia"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E4E4E4"
                android:layout_marginTop="15dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/v3_btn_shape"
                android:text="保 存"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_10"/>


        </LinearLayout>
    </FrameLayout>

</LinearLayout>