<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_skeleton" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingTop="17dp"
                android:paddingRight="14dp"
                android:paddingBottom="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/v3_yellow_shape"
                        android:paddingLeft="3dp"
                        android:paddingTop="2dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="2dp"
                        android:text="用户发单/维修"
                        android:textColor="@color/black"
                        android:textSize="8sp"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/v_two"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/bg_skeleton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/bg_skeleton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/bg_skeleton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/bg_skeleton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/bg_skeleton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/bg_skeleton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />
                </LinearLayout>

                <View
                    android:id="@+id/tv_copy"
                    android:layout_width="64dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_skeleton"
                    android:gravity="center"
                    android:text="复制信息"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingTop="15dp"
                android:paddingRight="13dp"
                android:paddingBottom="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/bg_skeleton"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/bg_skeleton"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_old_accessory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/bg_skeleton"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <LinearLayout
                    android:id="@+id/ll_address_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/bg_skeleton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/bg_skeleton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <LinearLayout
                        android:id="@+id/ll_post_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邮费："
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_post_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingTop="15dp"
                android:paddingRight="13dp"
                android:paddingBottom="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/bg_skeleton"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:background="#E5E5E5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/bg_skeleton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="16dp"
                        android:src="@drawable/v3_localtion" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="9dp"
                        android:layout_weight="1"
                        android:text="线路里程 34.58公里"
                        android:textColor="#808080"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/ll_change_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_change_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更改地址"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="8dp"
                            android:src="@mipmap/v3_youjiantou" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_not_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingTop="15dp"
                android:paddingRight="13dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="物品未到货"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看物流"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/v3_youjiantou" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_accessories_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingTop="15dp"
                android:paddingRight="13dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="配件详情"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/v3_youjiantou" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="70dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingTop="15dp"
                android:paddingRight="13dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/bg_skeleton"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <LinearLayout
                        android:id="@+id/ll_band"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_band"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="18"
                            android:text="品牌  分类"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_platform_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_platform_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="平台价格"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="8dp"
                            android:src="@mipmap/v3_youjiantou" />
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/bg_skeleton"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <View
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/bg_skeleton"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:id="@+id/tv_success"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_skeleton"
                    android:gravity="center"
                    android:text="预约成功"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>


            <View
                android:id="@+id/tv_upload"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_skeleton"
                android:gravity="center"
                android:text="添加服务内容"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:id="@+id/tv_return"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_skeleton"
                android:gravity="center"
                android:text="开始返件"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />

            <View
                android:id="@+id/tv_confirm_receipt"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_skeleton"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>