<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drawer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1690FF">
        <LinearLayout
            android:id="@+id/ll_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_actionbar_return"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_actionbar_return"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_actionbar_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="选择位置"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
        <ImageView
            android:id="@+id/iv_confirm"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/yes"/>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <AutoCompleteTextView
            android:id="@+id/keyWord"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/text_search"
            android:completionThreshold="1"
            android:dropDownVerticalOffset="1.0dip"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:hint="请输入关键字"
            android:textColorHint="#C0C0C0"
            android:imeOptions="actionDone"
            android:inputType="text|textAutoComplete"
            android:maxLength="20"
            android:paddingRight="37.0dip"
            android:paddingLeft="20.0dip"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16.0sp"
            android:focusable="true"/>



    </LinearLayout>


    <com.example.lenovo.drawerlibrary.DrawerLayout

    android:id="@+id/dial_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    drawer:DrawerLayoutContent_ID="@+id/drawerContent"
    drawer:DrawerLayoutHandler_ID="@+id/drawerHandle"
    drawer:DrawerLayout_ID="@+id/drawer2">


    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


        <RelativeLayout
            android:id="@+id/drawer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_select"
            android:layout_alignParentBottom="true">
            <TextView
                android:gravity="center"
                android:id="@+id/drawerHandle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:text="选择地址"
                android:textSize="18sp"
                />



            <LinearLayout
                android:id="@+id/drawerContent"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/drawerHandle"
                android:gravity="center"
                android:background="#ffffff"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>
                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@android:color/darker_gray"/>
            </LinearLayout>


        </RelativeLayout>

    </com.example.lenovo.drawerlibrary.DrawerLayout>



</LinearLayout>